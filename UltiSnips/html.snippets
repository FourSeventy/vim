snippet `<[a-zA-Z]+[\-0-9a-zA-Z]*` "Generic HTML tag builder multi-line" r
<`!p snip.rv = match.group()[1:]`>
 ${1}
</`!p snip.rv = match.group()[1:]`>
endsnippet

snippet . "class"
	class="${1}"
endsnippet

snippet # "id"
	id="${1}"
endsnippet


snippet a
	<a href="${1:#}">${0:$1}</a>
endsnippet
snippet a.
	<a class="${1}" href="${2:#}">${0:$1}</a>
endsnippet
snippet a#
	<a id="${1}" href="${2:#}">${0:$1}</a>
endsnippet

snippet button.
	<button class="${1:button}" type="${2:submit}">${0}</button>
endsnippet
snippet button#
	<button id="${1}" type="${2:submit}">${0}</button>
endsnippet

snippet div.
	<div class="${1}">
		${0}
	</div>
endsnippet
snippet div#
	<div id="${1}">
		${0}
	</div>
endsnippet

snippet h1.
	<h1 class="${1}">${0}</h1>
endsnippet
snippet h1#
	<h1 id="${1}">${0}</h1>
endsnippet
snippet h2.
	<h2 class="${1}">${0}</h2>
endsnippet
snippet h2#
	<h2 id="${1}">${0}</h2>
endsnippet
snippet h3.
	<h3 class="${1}">${0}</h3>
endsnippet
snippet h3#
	<h3 id="${1}">${0}</h3>
endsnippet
snippet h4.
	<h4 class="${1}">${0}</h4>
endsnippet
snippet h4#

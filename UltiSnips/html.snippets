endsnippet

snippet img
	<img src="${1}" alt="${2}" />
endsnippet
snippet img. 
	<img class="${1}" src="${2}" alt="${3}" />
endsnippet
snippet img#
	<img id="${1}" src="${2}" alt="${3}" />
endsnippet

snippet iframe
	<iframe src="${1}" frameborder="0"></iframe>
endsnippet
snippet iframe.
	<iframe class="${1}" src="${2}" frameborder="0"></iframe>
endsnippet
snippet iframe#
